
## <summary>policy for solaris</summary>


########################################
## <summary>
##	Transition to solaris.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`solaris_domtrans',`
	gen_require(`
		type solaris_t, solaris_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, solaris_exec_t, solaris_t)
')


########################################
## <summary>
##	Execute solaris server in the solaris domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`solaris_initrc_domtrans',`
	gen_require(`
		type solaris_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, solaris_initrc_exec_t)
')


########################################
## <summary>
##	Search solaris lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`solaris_search_lib',`
	gen_require(`
		type solaris_var_lib_t;
	')

	allow $1 solaris_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

